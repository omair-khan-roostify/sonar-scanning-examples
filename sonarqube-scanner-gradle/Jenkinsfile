pipeline {
    agent any

    environment {
            AWS_ECR_LOGIN='true'
    }
    stages {
        stage ('checkout') {
            steps {
                echo 'Checking out code from git repo'
                checkout scm
            }
        }

        stage ('clean') {
            steps {
                sh "gradle clean"
            }
        }

        stage ('compile') {
            steps {
                sh "gradle compileJava"
            }
        }

        stage ('Build') {
            steps {
                sh "gradle build -x test -i"
            }
        }
        
        stage ('test') {
            steps {
                sh "gradle test"
            }
        }
        }
    }
